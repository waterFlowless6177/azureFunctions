@model IEnumerable<LaserAfzar.Entities.AboutUs>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

@if (Model.Count() == 0)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.Description.Length >= 20)
            {
                @item.Description.Substring(0, 20);@:...
            }
            else
            {
                @Html.DisplayFor(modelItem => item.Description)
            }
            
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AboutUsId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AboutUsId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AboutUsId })
        </td>
    </tr>
}

</table>
